@model Neatburguer.Areas.Admin.Models.ViewModels.EliminarHambuViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<form action="~/Admin/menu/eliminar" method="post">
    <h1>Eliminar hamburguesa del menú</h1>
    <input type="hidden" asp-for="Id"/>
    <span class="pregunta"><b>¿Desea eliminar la hamburguesa?</b></span>
    <span>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" required asp-for="Nombre">
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Si" />
        <a href="~/Admin/menu">
            <input type="button" value="No" />
        </a>
    </div>
</form>

<script>

    function previewImagen() {
        const inputImagen = document.getElementById('imagen');
        const imagenPreview = document.getElementById('imagen-preview');

        const archivoImagen = inputImagen.files[0];

        if (archivoImagen) {
            const lector = new FileReader();

            lector.onload = function (e) {
                imagenPreview.src = e.target.result;
                imagenPreview.style.display = 'block';
            };

            lector.readAsDataURL(archivoImagen);
        } else {
            imagenPreview.src = '#';
            imagenPreview.style.display = 'none';
        }
    }
</script>

